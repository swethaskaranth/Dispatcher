<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/border_blue" />
                    <padding android:bottom="1dp" android:left="1dp" android:right="3dp" android:top="1dp" />
                    <corners android:radius="6dp"/>

                </shape>
            </item>

            <item >
                <bitmap
                        android:gravity="right|center_vertical"
                        android:src="@drawable/caret_down_blue"
                        />
            </item>
        </layer-list></item>
</selector>