<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/raise_issue_for_awb"
        android:textSize="@dimen/txt_16"
        android:textColor="@color/text_color_blue"
        android:fontFamily="@font/open_sans_semi_bold"
        android:layout_marginTop="@dimen/margin_13"
        android:layout_marginStart="@dimen/margin_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_grey"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        android:layout_marginTop="@dimen/margin_8"/>




    <TextView
        android:id="@+id/tvRtoCancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rto_cancelled"
        android:textSize="@dimen/txt_14"
        android:textColor="@color/text_color_blue"
        android:fontFamily="@font/open_sans_semi_bold"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginStart="@dimen/margin_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReasons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRtoCancelled"
        app:layout_constraintBottom_toTopOf="@id/clLayout"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_16"
        tools:listitem="@layout/lauout_rto_reason_item"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/divivder_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/tvReject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reject"
            android:gravity="center"
            android:paddingTop="@dimen/margin_9"
            android:paddingBottom="@dimen/margin_9"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_10"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_semi_bold"
            android:background="@drawable/reject_background_inactive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>


        <TextView
            android:id="@+id/tvAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/accept"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingTop="@dimen/margin_9"
            android:paddingBottom="@dimen/margin_9"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_12"
            android:fontFamily="@font/open_sans_semi_bold"
            android:background="@drawable/accept_background"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>