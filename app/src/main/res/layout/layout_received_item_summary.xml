<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolBar"
        layout="@layout/layout_toolbar_settlement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/labelSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:fontFamily="@font/open_sans_semi_bold"
        android:lineSpacingMultiplier="1.36"
        android:text="@string/item_received_summary_header"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_16"
        app:layout_constraintTop_toBottomOf="@id/toolBar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_10"
        app:layout_constraintTop_toBottomOf="@id/labelSummary"
         />

    <!-- <androidx.constraintlayout.widget.Barrier
         android:id="@+id/barrier"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:barrierDirection="top"
         app:constraint_referenced_ids="tvUploadImages, btn_payment_layout"/>-->

    <TextView
        android:id="@+id/tvUploadImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_13"
        android:layout_marginBottom="@dimen/margin_13"
        android:fontFamily="@font/open_sans_semi_bold"
        android:text="@string/upload_image_s"
        android:textColor="@color/md_blue"
        android:textSize="@dimen/txt_13"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvItems" />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_13"
        android:layout_marginBottom="@dimen/margin_19"
        app:layout_constraintBottom_toTopOf="@id/btn_payment_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUploadImages"
        app:layout_constraintVertical_bias="0"/>


    <include
        android:id="@+id/btn_payment_layout"
        layout="@layout/common_purple_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>