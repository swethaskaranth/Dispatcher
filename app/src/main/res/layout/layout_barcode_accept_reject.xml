<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_border_with_rounded_corners">

    <TextView
            android:id="@+id/tvBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/open_sans_semi_bold"
            android:lineSpacingMultiplier="1.33"
            android:paddingBottom="@dimen/margin_10"
            android:textColor="@color/unassigned_text_color"
            android:textSize="@dimen/txt_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1234567890123456" />

    <TextView
            android:id="@+id/tvReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_13"
            android:fontFamily="@font/open_sans_semi_bold"
            android:lineSpacingMultiplier="1.36"
            android:text="@string/reject"
            android:textColor="@color/reject_text_color"
            android:textSize="@dimen/txt_13"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_13"
            android:background="@color/border_blue"
            app:layout_constraintBottom_toBottomOf="@id/tvAccept"
            app:layout_constraintEnd_toStartOf="@id/tvAccept"
            app:layout_constraintTop_toTopOf="@id/tvAccept" />

    <TextView
            android:id="@+id/tvAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_17"
            android:fontFamily="@font/open_sans_semi_bold"
            android:lineSpacingMultiplier="1.36"
            android:text="@string/accept"
            android:textColor="@color/accept_green"
            android:textSize="@dimen/txt_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvBarcode">

        <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divivder_grey"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/labelSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_12"
                android:fontFamily="@font/open_sans_semi_bold"
                android:lineSpacingMultiplier="1.38"
                tools:text="@string/select_rejection_reason"
                android:textColor="@color/unassigned_text_color"
                android:textSize="@dimen/txt_13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider1" />

        <RadioGroup
                android:id="@+id/rgRejectReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginEnd="@dimen/margin_15"
                app:layout_constraintTop_toBottomOf="@id/labelSelect"
                android:visibility="visible">

            <RadioButton
                    android:id="@+id/rbRefrigerated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/refrigerated_medicine"
                    android:textColor="@color/unassigned_text_color" />

            <RadioButton
                    android:id="@+id/rbWrongBatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wrong_batch"
                    android:textColor="@color/unassigned_text_color" />

            <RadioButton
                    android:id="@+id/rbWrongMed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wrong_medicine"
                    android:textColor="@color/unassigned_text_color" />

            <RadioButton
                    android:id="@+id/rbDoesNotBelong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/doesn_t_belong_to_the_order"
                    android:textColor="@color/unassigned_text_color" />
        </RadioGroup>

        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80"
            app:layout_constraintTop_toBottomOf="@id/rgRejectReason"
            android:layout_marginStart="@dimen/margin_15"
            android:textSize="@dimen/txt_13"
            android:textColor="@color/unassigned_text_color"
            android:textColorHint="@color/hint"
            android:layout_marginEnd="@dimen/margin_15"
            android:inputType="textMultiLine"
            android:maxLength="512"
            android:imeOptions="actionDone"
            android:padding="@dimen/margin_8"
            android:gravity="start"
            android:hint="@string/add_comments"
            android:background="@drawable/add_remark_background"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tvInvalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etRemarks"
            app:layout_constraintStart_toStartOf="@id/etRemarks"
            android:text="Invalid value"
            android:textColor="@color/error_red"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="gone"/>

        <RadioGroup
                android:id="@+id/rgAcceptReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginEnd="@dimen/margin_15"
                app:layout_constraintTop_toBottomOf="@id/labelSelect"
                android:visibility="gone">

            <RadioButton
                    android:id="@+id/rbNoBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delivered_without_barcode"
                    android:textColor="@color/unassigned_text_color" />

            <RadioButton
                    android:id="@+id/rbDamaged"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/damaged_medicine"
                    android:textColor="@color/unassigned_text_color" />

            <RadioButton
                    android:id="@+id/rbLost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lost_damaged_by_db"
                    android:textColor="@color/unassigned_text_color" />

            <RadioButton
                    android:id="@+id/rbDidntReceive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_did_not_receive_the_medicine"
                    android:textColor="@color/unassigned_text_color" />
        </RadioGroup>

        <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="rgAcceptReason,etRemarks, tvInvalid" />

        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/divivder_grey"
                app:layout_constraintTop_toBottomOf="@id/barrier" />

        <View
                android:id="@+id/divider3"
                android:layout_width="@dimen/divider_ht"
                android:layout_height="0dp"
                android:background="@color/border_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

        <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:padding="@dimen/margin_10"
                android:text="@string/cancel"
                android:textColor="@color/unassigned_count_text_color"
                android:textSize="@dimen/txt_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/divider3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

        <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:padding="@dimen/margin_10"
                android:text="@string/confirm"
                android:textColor="@color/unassigned_count_text_color"
                android:textSize="@dimen/txt_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/divider3"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>