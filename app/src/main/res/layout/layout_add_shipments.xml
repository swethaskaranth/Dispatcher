<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_with_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/filter"
        layout="@layout/layout_pincode_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_17"
            android:layout_marginTop="@dimen/margin_17"
            android:layout_marginEnd="@dimen/margin_17"
            app:layout_constraintBottom_toTopOf="@id/flSave"
            app:layout_constraintTop_toBottomOf="@id/filter"
            app:layout_constraintVertical_bias="0.0"
           />

    <FrameLayout
            android:id="@+id/flSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divivder_grey"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/tvSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16"
                android:background="@drawable/blue_button_background"
                android:gravity="center"
                android:padding="@dimen/margin_9"
                android:text="@string/add_shipments"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_16" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>