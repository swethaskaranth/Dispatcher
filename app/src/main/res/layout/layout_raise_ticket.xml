<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include android:id="@+id/layout_view"
        layout="@layout/layout_view"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border_blue"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/margin_10"
        app:layout_constraintBottom_toTopOf="@+id/btn">

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:gravity="start"
                android:text="@string/title"
                android:layout_marginTop="@dimen/margin_16"
                />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:background="@drawable/border_blue"
                android:gravity="start"
                android:lines="1"
                android:padding="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:gravity="start"
                android:text="@string/description"
                android:layout_marginTop="@dimen/margin_16"
                />

            <EditText
                android:id="@+id/edit_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_100"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@drawable/border_blue"
                android:imeOptions="actionDone"
                android:scrollHorizontally="false"
                android:gravity="start"
                android:minLines="1"
                android:maxLines="20"
                android:ems="10"
                android:minWidth="@dimen/margin_60"
                android:maxWidth="@dimen/margin_150"
                android:padding="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:gravity="start"
                android:text="@string/select_priority"
                android:layout_marginTop="@dimen/margin_16"
                />

            <Spinner
                android:id="@+id/spinner_priority"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@drawable/border_blue"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:gravity="start"
                android:text="@string/cc_enter_comma_separated_email_id_s"
                android:visibility="visible"
                android:layout_marginTop="@dimen/margin_16"
                />

           <include
               android:id="@+id/layout_cc"
               layout="@layout/layout_cc"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="visible"
               android:layout_marginTop="@dimen/margin_16"
               android:layout_marginEnd="@dimen/margin_16"
               android:layout_marginStart="@dimen/margin_16"
               />

            <EditText
                android:id="@+id/edit_cc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/txt_13"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:hint="@string/enter_comma_separated_email_id_s"
                android:background="@drawable/border_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:text="@string/upload_photo"
                    android:textColor="@color/md_blue"
                    android:textSize="@dimen/txt_13" />

                <TextView
                    android:id="@+id/iv_add_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_weight="0.4"
                    android:background="@drawable/blue_button_background"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:text="@string/add_photo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_12" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCreditImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/image_items"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="4"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <include
        android:id="@+id/btn"
        layout="@layout/common_purple_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:layout_constraintVertical_bias="1"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
