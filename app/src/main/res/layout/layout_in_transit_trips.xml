<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_12"
        android:fontFamily="@font/open_sans_semi_bold"
        android:lineSpacingMultiplier="1.21"
        android:text="@string/select_in_transit_trip_s"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_13"
        android:background="@color/border_grey"
        app:layout_constraintTop_toBottomOf="@id/label1" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_11"
        app:layout_constraintTop_toBottomOf="@id/div1"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_16"
        android:text="@string/note_selecting_in_transit_trips_will_also_include_it_s_shipments" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInTransitTrips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/label2"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        />

    <include
        android:id="@+id/bottomLayout"
        layout="@layout/layout_confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>