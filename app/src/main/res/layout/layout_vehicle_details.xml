<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white">

    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEnterDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_25"
        android:text="@string/enter_details"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/text_color_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_20"
        app:cardCornerRadius="@dimen/margin_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvEnterDetails"
        app:layout_constraintTop_toBottomOf="@id/tvEnterDetails">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20">

            <TextView
                android:id="@+id/tvSelecMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_14"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="@string/select_mode_of_transport"
                android:textColor="@color/text_color_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rgMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:checkedButton="@id/rbRoad"
                android:layout_marginTop="@dimen/margin_12"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="@id/tvSelecMode"
                app:layout_constraintTop_toBottomOf="@id/tvSelecMode">

                <RadioButton
                    android:id="@+id/rbRoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/road"
                    android:layout_weight="1"
                    android:layout_marginStart="-5dp"/>

                <RadioButton
                    android:id="@+id/rbOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:minHeight="0dp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/tvAssignedDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:text="@string/assign_driver"
                android:textColor="@color/text_color_blue"
                android:fontFamily="@font/open_sans_semi_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rgMode" />

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/sprinter_spinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/spinner_background"
                android:hint="@string/select_driver"
                android:paddingStart="@dimen/margin_20"
                android:paddingEnd="@dimen/margin_20"
                android:textSize="@dimen/txt_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvAssignedDriver"
                app:layout_constraintTop_toBottomOf="@id/tvAssignedDriver" />

            <TextView
                android:id="@+id/labelVehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:text="@string/vehicle_number"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textColor="@color/text_color_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sprinter_spinner" />


            <TextView
                android:id="@+id/clNoVehicleMapped"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_14"
                android:background="@drawable/yellow_background"
                android:drawablePadding="@dimen/margin_10"
                android:fontFamily="@font/open_sans_semi_bold"
                android:lineSpacingMultiplier="1.17"
                android:padding="@dimen/margin_12"
                android:text="@string/no_vehicle_mapped"
                android:textColor="@color/brown"
                android:textSize="@dimen/txt_12"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelVehicleNumber" />


            <TextView
                android:id="@+id/clVehicleMapped"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_14"
                android:background="@color/green_background_color"
                android:drawablePadding="@dimen/margin_10"
                android:fontFamily="@font/open_sans_semi_bold"
                android:lineSpacingMultiplier="1.17"
                android:padding="@dimen/margin_12"
                android:text="@string/vehicle_mapped_successfully"
                android:textColor="@color/last_mile_tag"
                android:textSize="@dimen/txt_12"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_tick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelVehicleNumber" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="clNoVehicleMapped,clVehicleMapped"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clVehicleNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_14"
                android:background="@drawable/vehicle_number_background"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier">

                <EditText
                    android:id="@+id/etVehicleNumber"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_40"
                    android:background="@null"
                    android:hint="@string/enter_vehicle_number"
                    android:padding="@dimen/margin_5"
                    android:paddingStart="@dimen/margin_15"
                    android:paddingEnd="@dimen/margin_15"
                    android:textSize="@dimen/txt_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnSave"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/save_button_background_inactive"
                    android:gravity="center"
                    android:padding="@dimen/margin_12"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/clVehicleNumber"
                app:layout_constraintTop_toBottomOf="@id/clVehicleNumber"
                android:layout_marginTop="@dimen/margin_4"
                android:textColor="@color/error_red"
                android:visibility="gone"
                android:text="Please enter a valid vehicle number"/>


            <TextView
                android:id="@+id/tvVehicleNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_14"
                android:background="@drawable/mapped_vehicle_number_background"
                android:paddingStart="@dimen/margin_19"
                android:paddingTop="@dimen/margin_11"
                android:paddingEnd="@dimen/margin_16"
                android:paddingBottom="@dimen/margin_11"
                android:visibility="gone"
                app:drawableEndCompat="@drawable/ic_edit"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textColor="@color/text_color_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier"
                tools:text="KA 01 AG 1234" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/proceed_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/proceed_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.01"
            android:text="@string/proceed"
            android:textAllCaps="false"
            android:textColor="@color/off_white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>