<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_19"
        android:layout_marginTop="@dimen/margin_19"
        android:fontFamily="@font/open_sans_semi_bold"
        android:text="@string/are_you_sure_you_want_to_complete_this_task"
        android:textColor="@color/text_color_blue"
        android:textSize="@dimen/txt_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_12"
        android:background="@drawable/confirm_background"
        android:fontFamily="@font/open_sana_bold"
        android:paddingStart="@dimen/margin_13"
        android:paddingEnd="@dimen/margin_13"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_13"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_22"/>

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textAllCaps="true"
        android:textColor="@color/link_blue"
        android:textSize="@dimen/txt_14"
        android:fontFamily="@font/open_sana_bold"
        app:layout_constraintEnd_toStartOf="@id/btnConfirm"
       app:layout_constraintTop_toTopOf="@id/btnConfirm"
        app:layout_constraintBottom_toBottomOf="@id/btnConfirm"
        android:layout_marginEnd="@dimen/margin_16"
        />

</androidx.constraintlayout.widget.ConstraintLayout>