<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_12"
    android:background="@drawable/summary_item_border"
    >

    <TextView
        android:id="@+id/labelCashInHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textStyle="normal"
        android:textSize="@dimen/txt_13"
        android:textColor="@color/text_color"
        android:text="@string/cash_in_hand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_10"
        />

    <TextView
        android:id="@+id/tvCashInHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_extra_bold"
        android:textStyle="normal"
        android:textSize="@dimen/txt_16"
        android:textColor="#0070d2"
        android:lineSpacingExtra="14sp"
        tools:text="`1,500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/margin_12"
        />

    <TextView
        android:id="@+id/labelCashCollected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:textStyle="normal"
        android:textSize="@dimen/txt_13"
        android:textColor="@color/text_color"
        android:lineSpacingExtra="11sp"
        android:text="@string/cash_collected"
        app:layout_constraintTop_toTopOf="@id/tvCashCollected"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_22"
        />

    <TextView
        android:id="@+id/labelCashDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:textStyle="normal"
        android:textSize="@dimen/txt_13"
        android:textColor="@color/text_color"
        android:lineSpacingExtra="11sp"
        android:text="@string/less_airtel_cash_deposit"
        app:layout_constraintTop_toTopOf="@id/tvCashDeposit"
        app:layout_constraintStart_toStartOf="@id/labelCashCollected"
        />

    <TextView
        android:id="@+id/tvCashCollected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textStyle="normal"
        android:textSize="@dimen/txt_13"
        android:textColor="@color/text_color_blue"
        android:lineSpacingExtra="11sp"
        app:layout_constraintEnd_toEndOf="@id/tvCashInHand"
        app:layout_constraintTop_toBottomOf="@id/tvCashInHand"
        android:layout_marginTop="@dimen/margin_10"
        tools:text="`2,000"
        />

    <TextView
        android:id="@+id/tvCashDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textStyle="normal"
        android:textSize="@dimen/txt_13"
        android:textColor="@color/unassigned_count_text_color"
        android:lineSpacingExtra="11sp"
        app:layout_constraintEnd_toEndOf="@id/tvCashInHand"
        app:layout_constraintTop_toBottomOf="@id/tvCashCollected"
        android:layout_marginTop="@dimen/margin_10"
        tools:text="`2,000"
        />

   <!-- <ImageView
        android:id="@+id/ivRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/labelCashDeposit"
        app:layout_constraintTop_toTopOf="@id/labelCashDeposit"
        app:layout_constraintBottom_toBottomOf="@id/labelCashDeposit"
        app:srcCompat="@drawable/ic_refresh_blue"/>-->

    <View
        android:id="@+id/div"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#cccccc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_12"
        app:layout_constraintTop_toTopOf="@id/labelCashCollected"
        app:layout_constraintBottom_toBottomOf="@id/labelCashDeposit"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/off_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/div"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="end"
            android:text="Completed"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/txt_13" />

        <TextView
            android:id="@+id/completeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/txt_13"
            tools:text="12" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/divivder_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="end"
            android:text="Incomplete"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/txt_13" />

        <TextView
            android:id="@+id/inCompleteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/txt_13"
            tools:text="7" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>