<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/labelHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/shipment_already_scanned" />

    <TextView
        android:id="@+id/tvScannedText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textStyle="normal"
        android:textSize="13sp"
        android:background="@drawable/red_background_border"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/labelHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_11"
        android:paddingStart="@dimen/margin_18"
        android:paddingEnd="@dimen/margin_18"
        android:paddingTop="@dimen/margin_11"
        android:paddingBottom="@dimen/margin_11"
        tools:text="“605711-ACN” is already scanned"
        />

    <TextView
        android:id="@+id/labelMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textStyle="normal"
        android:textSize="@dimen/txt_13"
        android:textColor="@color/unassigned_text_color"
        android:lineSpacingExtra="@dimen/txt_8"
        android:text="@string/please_try_scanning_another_shipment"
        android:layout_marginTop="@dimen/margin_11"
        app:layout_constraintStart_toStartOf="@id/labelHeading"
        app:layout_constraintTop_toBottomOf="@id/tvScannedText"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelMessage"
        android:layout_marginTop="@dimen/margin_26"
        android:background="@color/border_grey"/>

    <TextView
        android:id="@+id/tvDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sana_bold"
        android:textStyle="bold"
        android:textSize="@dimen/txt_13"
        android:textColor="@color/text_color"
        android:textAllCaps="true"
        android:text="@string/dismiss"
        android:layout_marginTop="@dimen/margin_14"
        android:layout_marginBottom="@dimen/margin_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        />
</androidx.constraintlayout.widget.ConstraintLayout>