<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cash_collection_breakup"
        android:textSize="@dimen/txt_16"
        android:layout_marginStart="@dimen/margin_17"
        android:layout_marginEnd="@dimen/margin_17"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="@color/text_color_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/llheader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_10"
        android:background="#4016325C"
        app:layout_constraintTop_toBottomOf="@+id/tvCash">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_blue"
            android:layout_marginStart="@dimen/margin_17"
            android:text="@string/ref_name"
            android:fontFamily="@font/open_sans_semi_bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_blue"
            android:layout_marginStart="@dimen/margin_17"
            android:layout_marginEnd="@dimen/margin_17"
            android:text="@string/amount"
            android:fontFamily="@font/open_sans_semi_bold"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCashBreakup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_cash_breakup"
        android:layout_marginStart="@dimen/margin_17"
        app:layout_constrainedHeight="true"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_10"
        app:layout_constraintTop_toBottomOf="@+id/llheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/verticalView"/>

    <View
        android:id="@+id/verticalView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e5e8f4"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvDismiss"
        app:layout_constraintTop_toBottomOf="@id/rvCashBreakup" />

    <TextView
        android:id="@+id/tvDismiss"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:padding="@dimen/margin_10"
        android:text="@string/dismiss"
        android:textAllCaps="true"
        android:textColor="@color/unassigned_text_color"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>