<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/labelDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/are_you_sure_you_want_to_xa_delete_this_trip"
            android:textColor="@color/unassigned_text_color"
            android:textSize="@dimen/txt_16"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_19"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_ht"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@color/border_grey"
            app:layout_constraintTop_toBottomOf="@id/labelDelete"/>

    <View
            android:id="@+id/divider1"
            android:layout_width="@dimen/divider_ht"
            android:layout_height="0dp"
            android:background="@color/border_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

    <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="@string/cancel"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/divider1"
            android:textColor="@color/unassigned_text_color"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/margin_10"
            android:fontFamily="@font/open_sana_bold"
            android:textSize="13sp" />

    <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="@string/confirm"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@id/divider1"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/unassigned_text_color"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/margin_10"
            android:fontFamily="@font/open_sana_bold"
            android:textSize="13sp" />

</androidx.constraintlayout.widget.ConstraintLayout>