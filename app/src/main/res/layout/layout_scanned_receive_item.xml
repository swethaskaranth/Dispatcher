<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/margin_5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8">

        <ImageView
            android:id="@+id/ivAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvReferenceId"
            app:srcCompat="@drawable/ic_warning" />

        <TextView
            android:id="@+id/tvReferenceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ivAction"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/margin_9"
            tools:text="1234567891"
            android:textColor="@color/text_color_blue"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textSize="@dimen/txt_14"/>

        <TextView
            android:id="@+id/tvShipmentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvReferenceId"
            app:layout_constraintTop_toBottomOf="@id/tvReferenceId"
            android:layout_marginTop="@dimen/margin_4"
            tools:text="RTO Cancelled"
            android:textColor="@color/md_blue"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="@dimen/txt_12"/>

        <View
            android:id="@+id/view"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/ellipse"
            android:layout_marginStart="@dimen/margin_8"
            app:layout_constraintStart_toEndOf="@id/tvShipmentStatus"
            app:layout_constraintTop_toTopOf="@id/tvShipmentStatus"
            app:layout_constraintBottom_toBottomOf="@id/tvShipmentStatus"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/tvShipmentStatus"
            android:layout_marginStart="@dimen/margin_8"
            android:text="@string/accepted"
            android:textColor="@color/green_border_color"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="@dimen/txt_12"/>



        <ImageView
            android:id="@+id/ivScanned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_checked_ico" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>