<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_20"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/switch_roles"
        android:textColor="@color/text_color"
        android:textSize="@dimen/txt_16" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cecdcd" />

    <LinearLayout
        android:id="@+id/llSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nav_ready_for_dispatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="start"
            android:textColor="@color/text_color_roboto"
            android:padding="@dimen/margin_20"
            android:text="@string/sortation"
            android:textSize="@dimen/txt_14" />

        <TextView
            android:layout_width="@dimen/margin_32"
            android:layout_height="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_2"
            android:background="@drawable/bg_cancel_count"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4"
            android:text="0"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/txt_8"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16"
        android:background="#cecdcd" />

    <LinearLayout
        android:id="@+id/llDFS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_20">

        <TextView
            android:id="@+id/tv_nav_dispatched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="start"
            android:text="@string/dispatched"
            android:textColor="@color/text_color_roboto"
            android:textSize="@dimen/txt_14" />

        <TextView
            android:id="@+id/tvTaskCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:fontFamily="sans-serif-medium"
            android:textColor="#838e92"
            android:textSize="@dimen/txt_12"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="Total task completed 45" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16"
        android:background="#cecdcd" />

    <LinearLayout
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

        <TextView
                android:id="@+id/tv_nav_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:text="@string/logout"
                android:textColor="@color/text_color_roboto"
                android:textSize="@dimen/txt_14" />

    </LinearLayout>

    <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_16"
            android:background="#cecdcd" />




</LinearLayout>
