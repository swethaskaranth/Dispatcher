<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_border_with_rounded_corners">


    <TextView
        android:id="@+id/originName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
         tools:text="Shree Simba Chemist"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_13"
        android:lineSpacingMultiplier="1.23"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_11"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divivder_grey"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintTop_toBottomOf="@id/originName"/>

    <TextView
        android:id="@+id/labelPicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:fontFamily="@font/open_sans_regular"
        android:lineSpacingMultiplier="1.36"
        android:text="Picked"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <TextView
        android:id="@+id/tvPicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sana_bold"
        android:lineSpacingMultiplier="1.33"
        tools:text="2"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_18"
        app:layout_constraintEnd_toEndOf="@id/labelPicked"
        app:layout_constraintStart_toStartOf="@id/labelPicked"
        app:layout_constraintTop_toBottomOf="@id/labelPicked" />


    <View
        android:id="@+id/divider2"
        android:layout_width="@dimen/divider_ht"
        android:layout_height="0dp"
        android:background="@color/border_blue"
        app:layout_constraintStart_toEndOf="@id/labelReceived"
        app:layout_constraintEnd_toStartOf="@id/labelPicked"
        app:layout_constraintBottom_toBottomOf="@id/tvPicked"
        app:layout_constraintTop_toTopOf="@id/labelPicked"/>

    <TextView
        android:id="@+id/labelReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_8"
        android:fontFamily="@font/open_sans_regular"
        android:lineSpacingMultiplier="1.36"
        android:text="Received"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <TextView
        android:id="@+id/tvReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sana_bold"
        android:lineSpacingMultiplier="1.33"
        tools:text="2"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_18"
        app:layout_constraintEnd_toEndOf="@id/labelReceived"
        app:layout_constraintStart_toStartOf="@id/labelReceived"
        app:layout_constraintTop_toBottomOf="@id/labelReceived"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_10"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="@dimen/divider_ht"
        android:layout_height="0dp"
        android:background="@color/border_blue"
        app:layout_constraintStart_toEndOf="@id/labelPicked"
        app:layout_constraintEnd_toStartOf="@id/labelBalance"
        app:layout_constraintBottom_toBottomOf="@id/tvPicked"
        app:layout_constraintTop_toTopOf="@id/labelPicked"/>

    <TextView
        android:id="@+id/labelBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_36"
        android:layout_marginTop="@dimen/margin_8"
        android:fontFamily="@font/open_sans_regular"
        android:lineSpacingMultiplier="1.36"
        android:text="Balance"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <TextView
        android:id="@+id/tvReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_bold"
        android:lineSpacingMultiplier="1.33"
        android:text="Review"
        android:textColor="@color/unassigned_count_text_color"
        android:textSize="@dimen/txt_13"
        app:layout_constraintEnd_toEndOf="@id/labelBalance"
        app:layout_constraintStart_toStartOf="@id/labelBalance"
        app:layout_constraintBottom_toBottomOf="@id/tvPicked"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@id/tvPicked"/>




</androidx.constraintlayout.widget.ConstraintLayout>