<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtRefId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/txt_14"
        android:textColor="@color/text_color_blue_dark"
        android:fontFamily="@font/open_sans_regular"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_12"
        tools:text="654789-VYB"/>

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/divider_color"
        android:layout_marginStart="@dimen/margin_12"
        app:layout_constraintTop_toTopOf="@id/txtRefId"
        app:layout_constraintBottom_toBottomOf="@id/txtRefId"
        app:layout_constraintStart_toEndOf="@id/txtRefId"
        app:layout_constraintEnd_toStartOf="@id/txtBinNumber"/>


    <TextView
        android:id="@+id/txtBinNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/view"
        android:layout_marginStart="@dimen/margin_12"
        app:layout_constraintTop_toTopOf="@id/txtRefId"
        android:textSize="@dimen/txt_14"
        android:textColor="@color/text_color_blue_dark"
        android:fontFamily="@font/open_sans_regular"
        android:layout_marginEnd="@dimen/margin_16"
        tools:text="R-099"/>


</androidx.constraintlayout.widget.ConstraintLayout>