<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_16"
    android:background="@drawable/border_search">


    <TextView
        android:id="@+id/tvTripId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_17"
        android:layout_marginTop="@dimen/margin_11"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Trip 123456" />

    <TextView
        android:id="@+id/tvTaskCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/margin_10"
        android:background="@drawable/scan_count_background"
        android:fontFamily="@font/sfui_text_semi_bold"
        android:gravity="center"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/txt_10"
        app:layout_constraintBottom_toBottomOf="@id/tvTripId"
        app:layout_constraintStart_toEndOf="@id/tvTripId"
        app:layout_constraintTop_toTopOf="@id/tvTripId"
        tools:text="145" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_11"
        android:layout_marginEnd="@dimen/margin_12"
        android:fontFamily="@font/open_sans_italic"
        android:textColor="@color/FF54698D"
        android:textSize="@dimen/txt_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12:00 PM, May 19" />

    <TextView
        android:id="@+id/tvSprinterComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_17"
        android:layout_marginTop="@dimen/margin_10"
        android:drawableStart="@drawable/ic_sprinter_blue"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_13"
        android:visibility="invisible"
        android:drawablePadding="@dimen/margin_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTripId"
        tools:text="Arpit Varshney" />

    <TextView
        android:id="@+id/tvSprinter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_17"
        android:layout_marginTop="@dimen/margin_10"
        android:visibility="invisible"
        android:drawableStart="@drawable/ic_sprinter"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_13"
        android:drawablePadding="@dimen/margin_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTripId"
        tools:text="Arpit Varshney" />

    <TextView
        android:id="@+id/tvInactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_17"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_17"
        android:background="@drawable/red_background"
        android:gravity="center"
        android:padding="@dimen/margin_5"
        android:textColor="@color/red"
        android:textSize="@dimen/txt_13"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvSprinter"
        tools:text="10 hours of inactivity in this trip" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvInactivity" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:background="@color/gray_line"
        app:layout_constraintTop_toBottomOf="@id/tvInactivity" />


    <TextView
        android:id="@+id/tvSettleTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_20"
        android:drawableStart="@drawable/ic_settle"
        android:drawablePadding="@dimen/margin_10"
        android:text="@string/settle_trip"
        android:textColor="@color/unassigned_count_text_color"
        android:textSize="@dimen/txt_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="@dimen/margin_40"
        android:background="@color/divivder_grey"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="@id/guideline"/>

    <TextView
        android:id="@+id/tvCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:drawableStart="@drawable/call_icon"
        android:drawablePadding="@dimen/margin_10"
        android:text="@string/call_delivery_agent"
        android:textColor="@color/unassigned_count_text_color"
        android:textSize="@dimen/txt_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/tvCall2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:drawablePadding="@dimen/margin_10"
        android:drawableStart="@drawable/call_icon"
        android:text="@string/call_delivery_agent"
        android:textColor="@color/unassigned_count_text_color"
        android:textSize="@dimen/txt_13"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>