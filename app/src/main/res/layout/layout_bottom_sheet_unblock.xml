<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/open_sans_regular"
        tools:text="Order ID “DLY45678” is postponed for 30/8/19."
        android:textSize="@dimen/txt_13"
        android:gravity="center"
        android:textColor="@color/text_color_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/open_sans_semi_bold"
        android:text="@string/do_you_want_to_unlock_this_order_for_assignment_to_trip"
        android:textColor="@color/unassigned_text_color"
        android:textSize="@dimen/txt_14"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOrderId"/>


    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_ht"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="#e5e8f4"
            app:layout_constraintTop_toBottomOf="@id/tv_label" />

    <View
            android:id="@+id/verticalView"
            android:layout_width="@dimen/divider_ht"
            android:layout_height="0dp"
            android:background="#e5e8f4"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="@id/tvDismiss"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2" />

    <TextView
            android:id="@+id/tvYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/verticalView"
            android:fontFamily="@font/open_sana_bold"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:padding="@dimen/margin_10"
            android:text="@string/yes"
            android:textAllCaps="true"
            android:textColor="@color/unassigned_text_color"
            android:textSize="@dimen/txt_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/verticalView"
            app:layout_constraintTop_toBottomOf="@id/divider2" />

    <TextView
            android:id="@+id/tvDismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:padding="@dimen/margin_10"
            android:text="@string/no"
            android:textAllCaps="true"
            android:textColor="@color/unassigned_text_color"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/verticalView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2" />

</androidx.constraintlayout.widget.ConstraintLayout>