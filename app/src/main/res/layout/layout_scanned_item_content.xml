<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_border_with_rounded_corners">


    <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_12"
            android:fontFamily="@font/open_sans_semi_bold"
            android:lineSpacingMultiplier="1.38"
            android:textColor="@color/unassigned_text_color"
            android:textSize="@dimen/txt_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SHELCAL 500MG TAB 10â€™S" />


    <TextView
            android:id="@+id/tvItemBatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:fontFamily="@font/open_sans_regular"
            android:lineSpacingMultiplier="1.36"
            tools:text="@string/batch_number"
            android:textColor="@color/FF54698D"
            android:textSize="@dimen/txt_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvItemName" />

    <TextView
            android:id="@+id/tvItemReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:fontFamily="@font/open_sans_regular"
            android:lineSpacingMultiplier="1.36"
            tools:text="@string/return_reason"
            android:textColor="@color/FF54698D"
            android:textSize="@dimen/txt_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvItemBatch" />

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/divivder_grey"
            app:layout_constraintTop_toBottomOf="@id/tvItemReason" />

    <TextView
            android:id="@+id/tvAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_13"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@drawable/green_background"
            android:fontFamily="@font/open_sans_semi_bold"
            android:lineSpacingMultiplier="1.36"
            android:paddingStart="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_5"
            android:text="@string/accept"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <TextView
            android:id="@+id/tvReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@drawable/reject_red_background"
            android:fontFamily="@font/open_sans_semi_bold"
            android:lineSpacingMultiplier="1.36"
            android:paddingStart="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_5"
            android:text="@string/reject"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13"
            app:layout_constraintEnd_toStartOf="@id/tvAccept"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rejection_reasom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
                android:id="@+id/labelSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_12"
                android:fontFamily="@font/open_sans_semi_bold"
                android:lineSpacingMultiplier="1.38"
                android:text="Select Rejection Reason"
                android:textColor="@color/unassigned_text_color"
                android:textSize="@dimen/txt_13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
                android:id="@+id/rgReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginEnd="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_6"
                app:layout_constraintTop_toBottomOf="@id/labelSelect">

            <RadioButton
                    android:id="@+id/rbRefrigerated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unassigned_text_color"
                    android:text="@string/refrigerated_medicine" />

            <RadioButton
                    android:id="@+id/rbWrongBatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unassigned_text_color"
                    android:text="@string/wrong_batch" />

            <RadioButton
                    android:id="@+id/rbWrongMed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unassigned_text_color"
                    android:text="@string/wrong_medicine" />

            <RadioButton
                    android:id="@+id/rbDoesNotBelong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unassigned_text_color"
                    android:text="@string/doesn_t_belong_to_the_order" />
        </RadioGroup>

        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80"
            app:layout_constraintTop_toBottomOf="@id/rgReason"
            android:layout_marginStart="@dimen/margin_15"
            android:textSize="@dimen/txt_13"
            android:textColor="@color/unassigned_text_color"
            android:textColorHint="@color/hint"
            android:layout_marginEnd="@dimen/margin_15"
            android:inputType="textMultiLine"
            android:maxLength="512"
            android:imeOptions="actionDone"
            android:padding="@dimen/margin_8"
            android:gravity="start"
            android:hint="@string/add_comments"
            android:background="@drawable/add_remark_background"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tvInvalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etRemarks"
            app:layout_constraintStart_toStartOf="@id/etRemarks"
            android:text="Invalid value"
            android:textColor="@color/error_red"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="gone"/>

        <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="etRemarks, tvInvalid" />


        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/divivder_grey"
                app:layout_constraintTop_toBottomOf="@id/barrier" />

        <View
                android:id="@+id/divider3"
                android:layout_width="@dimen/divider_ht"
                android:layout_height="0dp"
                android:background="@color/border_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2"/>

        <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/divider3"
                android:textColor="@color/unassigned_count_text_color"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/txt_13" />

        <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/confirm"
                app:layout_constraintStart_toStartOf="@id/divider3"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/unassigned_count_text_color"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/txt_13" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>