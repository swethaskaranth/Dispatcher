<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/labelCashDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textStyle="normal"
        android:textSize="@dimen/txt_16"
        android:textColor="@color/text_color_blue"
        android:lineSpacingExtra="24sp"
        android:text="@string/airtel_cash_deposit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        app:layout_constraintBottom_toTopOf="@id/tvDismiss"
        app:layout_constraintTop_toBottomOf="@id/labelCashDeposit"
        tools:listitem="@layout/item_cash_transaction"/>


    <TextView
        android:id="@+id/tvDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:textSize="@dimen/txt_13"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:gravity="center_horizontal"
        android:text="@string/dismiss"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rvTransactions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_10"
        />

</androidx.constraintlayout.widget.ConstraintLayout>